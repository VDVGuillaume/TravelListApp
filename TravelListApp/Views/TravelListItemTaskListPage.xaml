<Page
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x1="using:TravelListApp.Models"
    xmlns:local="using:TravelListApp.Views"
    x:Class="TravelListApp.Views.TravelListItemTasklistPage"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Background="{StaticResource TravelBackground2}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <local:TravelListItemMenu x:Name="Menu" Grid.Row="0"/>
            <TextBlock  Text="TaskList" FontSize="20" Margin="41,48,-41,2" Grid.RowSpan="2"  />
        </Grid>


        <Grid Width ="550" HorizontalAlignment="Left" Padding="100,20,0,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Check" HorizontalAlignment="Left"  Grid.ColumnSpan="2" VerticalAlignment="Stretch"/>
            <TextBlock Grid.Column="1" Text="Task" HorizontalAlignment="Center" />
        </Grid>
        <Grid x:Name="addList" Width ="550" HorizontalAlignment="Left" Padding="100,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="19*"/>

            </Grid.RowDefinitions>
            <CheckBox x:Name="NewCheck" Grid.Column="0" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="50"/>
            <TextBox x:Name="NewItem" Grid.Row="0" Grid.Column="1" Text="" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" PlaceholderText="Type in your task"  />
            <Button Grid.Row ="0" Grid.Column="2" Background="Transparent" Click="AddItem" >
                <SymbolIcon Symbol="Add" HorizontalAlignment="Center" />
            </Button>


        </Grid>

        <GridView  x:Name="TaskListTable" ItemsSource="{x:Bind ObservableTaskListItems  }" Width ="550" HorizontalAlignment="Left" Padding="100,20,0,0" Height="500" ScrollViewer.VerticalScrollBarVisibility="Visible" Margin="0,0,0,0" VerticalAlignment="Stretch">

            <GridView.ItemTemplate>
                <DataTemplate x:DataType="x1:TaskListItem" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox  Grid.Row="0" Grid.Column="0" IsChecked="{Binding Checked}"  Content="{Binding TravelTaskListItemId }"  HorizontalAlignment="Left" VerticalAlignment="Center"  Width="50" Grid.ColumnSpan="2" Checked="CheckBox_CheckedChanged" Unchecked="CheckBox_CheckedChanged"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center"  />
                        <Button Grid.Row ="0" Grid.Column="2" Background="Transparent" Tag="{Binding TravelTaskListItemId}" Click="DeleteItem" >
                            <SymbolIcon Symbol="Delete" HorizontalAlignment="Center" />
                        </Button>


                    </Grid>

                </DataTemplate>

            </GridView.ItemTemplate>


        </GridView>
        <TextBlock Text="The progress of your Tasklist" FontSize="20" Width="550" HorizontalAlignment="Left" TextAlignment="Center"/>
        <ProgressBar x:Name="Progress"  Width="550" Height="50" HorizontalAlignment="Left" VerticalAlignment="Stretch" />
    </StackPanel>
</Page>
